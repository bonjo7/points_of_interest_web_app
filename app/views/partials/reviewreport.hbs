<section class="ui raised segment">
    <div class="ui grid">

        <article class="sixteen wide column">
            <table class="ui celled table segment">
                <thead>
                <tr>
                    <th>Rating</th>
                    <th>Review</th>
                    <th>Reviewed By</th>
                </tr>
                </thead>
                <tbody>
                {{#each reviews}}
                    <tr>
                        <td> {{rating}} </td>
                        <td> {{review}} </td>
                        <td> {{reviewer.firstName}} {{reviewer.lastName}}</td>

                    </tr>
                {{/each}}
                </tbody>
            </table>
        </article>
    </div>
</section>