{{> mainmenu _id="editPoi" }}


<section class="ui raised segment">
    <div class="ui grid ">
        <div class="ui form eight wide column">
            <div class="ui stacked segment">

                <h5>Attraction Name</h5>

                <form action="/settingsPoi{{poi._id}}" method="POST">

                   <div class="ui selection dropdown" name="attractionType">
                        <input type="hidden" name="attractionType">

                       <div class="text">{{poi.attractionType}}</div>
                        <i class="ui dropdown icon"></i>
                        <div class="menu">
                            <div class="item">Historic</div>
                            <div class="item">Beach</div>
                            <div class="item">Woodlands</div>
                            <div class="item">Mountains</div>
                            <div class="item">Outdoor Activity</div>
                            <div class="item">Eating & Drinking</div>
                        </div>
                    </div>
                    <div class="ui blue left pointing basic label">
                        Please seletcion an attraction typle
                    </div><p></p>

                   <!--<div class="field">
                        <input value="" type="text" name="attractionId">
                   </div>-->

                    <div class="field">
                        <label>Attraction Name</label>
                        <input value="{{poi.attractionName}}" type="text" name="attractionName">
                    </div>
                    <div class="field">
                        <label>Description</label>
                        <textarea rows="4" cols="50" name="description">{{poi.description}}</textarea>
                    </div>

                    <div class="field">
                        <label>Latitude</label>
                        <input value="{{poi.latitude}}" type="number" step="0.000001" name="latitude">
                    </div>
                    <div class="field">
                        <label>Longitude</label>
                        <input value="{{poi.longitude}}" type="number" step="0.000001" name="longitude">
                    </div>

                    <button class="ui blue submit button">Submit</button>

                </form>
                {{> error }}
            </div>
        </div>
        <aside class="six wide column">
            <img src="/images/edit.png" class="ui centered big image">
        </aside>
    </div>
</section>